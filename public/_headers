# Security Headers for LogiAI - SSL Fix
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://api.openrouteservice.org https://api.openai.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.openrouteservice.org https://api.openai.com wss:; upgrade-insecure-requests;
  Permissions-Policy: camera=(), microphone=(), geolocation=()

# Cache static assets
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# API routes
/api/*
  Cache-Control: no-cache
