/shipments/create /shipments/create/ 302
/procurement /procurement/ 302
/distribution /distribution/ 302
/login /login/ 302

# Static assets
/_next/* /_next/:splat 200
/favicon.ico /favicon.ico 200
/*.svg /:splat.svg 200
/*.png /:splat.png 200
/*.jpg /:splat.jpg 200

# Handle 404s - redirect to custom 404 page
/404 /404/ 200

# Catch-all for unknown routes - redirect to dashboard
/* /dashboard/ 302
